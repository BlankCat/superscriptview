<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:droidwolf="http://schemas.android.com/apk/res/com.droidwolf.superscript"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="20dp" >

    <!-- 完全覆盖 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon"
            android:orientation="vertical" >

            <com.droidwolf.superscript.SuperscriptView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#0262AC"
                android:gravity="center_horizontal|bottom"
                android:text="HD"
                android:textColor="@android:color/white"
                android:textSize="13.333dp"
                droidwolf:gravity="leftTop"
                droidwolf:leftEdge="41.333dp"
                droidwolf:topEdge="41.333dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon"
            android:orientation="vertical" >

            <com.droidwolf.superscript.SuperscriptView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="#0262AC"
                android:gravity="center_horizontal|bottom"
                android:text="HD"
                android:textColor="@android:color/white"
                android:textSize="13.333dp"
                droidwolf:gravity="rightTop"
                droidwolf:rightEdge="41.333dp"
                droidwolf:topEdge="41.333dp" />
        </LinearLayout>
    </LinearLayout>

        <!-- 不完全覆盖 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon"
            android:orientation="vertical" >

            <com.droidwolf.superscript.SuperscriptView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#0262AC"
                android:gravity="center"
                android:text="HD"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                droidwolf:gravity="leftTop"
                droidwolf:leftEdge="37.333dp"
                droidwolf:smallLeftEdge="16.667dp" 
                droidwolf:topEdge="37.333dp" 
                droidwolf:smallTopEdge="16.667dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon"
            android:orientation="vertical" >

            <com.droidwolf.superscript.SuperscriptView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="#0262AC"
                android:gravity="center"
                android:text="HD"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                droidwolf:gravity="rightTop"
                droidwolf:rightEdge="37.333dp"
                droidwolf:smallRightEdge="16.667dp" 
                droidwolf:topEdge="37.333dp" 
                droidwolf:smallTopEdge="16.667dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>